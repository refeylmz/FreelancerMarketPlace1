@model FreelancerMarketPlace1.Models.Model.UserSignInViewModel

@{
    ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Page Content -->
<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<!-- Login Content -->
				<div class="account-content">
					<div class="align-items-center justify-content-center">
						<div class="login-right">
							<div class="login-header text-center">
								<a href="index.html"><img src="~/template-html/assets/img/logo-01.png" alt="logo" class="img-fluid"></a>
								<h3>Tekrar Hoşgeldiniz!</h3>
								<p>Bir sonraki fırsatı kaçırmayın. Profesyonel dünyanızla ilgili güncel bilgilere sahip olmak için oturum açın.</p>
							</div>
							<form method="post">
								<div class="form-group form-focus">
									<input type="text" class="form-control floating" asp-for="UserName" required>
									<label class="focus-label">Kullanıcı Adı</label>
								</div>
								<div class="form-group form-focus">
									<input type="password" class="form-control floating" asp-for="Password" required>
									<label class="focus-label">Şifre</label>
								</div>
								<div class="form-group">
									<label class="custom_check">
										<input type="checkbox" name="rem_password">
										<span class="checkmark"></span> Beni Hatırla
									</label>
								</div>
								<button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Giriş Yap!</button>
								<div class="row">
									<div class="col-6 text-start">
										<a class="forgot-link" ></a>
									</div>
									<div class="col-6 text-end dont-have">Kofejob'ta yeni misiniz? <a href="register.html">Tıklayın!</a></div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- /Login Content -->
			</div>
		</div>
	</div>
</div>
<!-- /Page Content -->