@model FreelancerMarketPlace1.Models.Model.UserRegisterViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Register Tab Content -->
            <div class="account-content">
                <div class="align-items-center justify-content-center">
                    <div class="login-right">
                        <div class="login-header text-center">
                            <a href="index.html"><img src="~/template-html/assets/img/logo-01.png" alt="logo" class="img-fluid"></a>
                            <h3>Kofejob'a katılın</h3>
                            <p>Mesleki hayatınızdan en iyi şekilde yararlanın</p>
                        </div>
                        <nav class="user-tabs mb-4">
                            <ul role="tablist" class="nav nav-pills nav-justified">
                                <li class="nav-item">
                                    <a href="#developer" data-bs-toggle="tab" class="nav-link active">FREELANCER</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#company" data-bs-toggle="tab" class="nav-link">İŞ VEREN</a>
                                </li>
                            </ul>
                        </nav>
                        <div class="tab-content pt-0">
                            <div role="tabpanel" id="developer" class="tab-pane fade active show">
                                <form method="post">
                                    <input type="hidden" asp-for="IsFreeLancer" value="true" />
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="Name" required>
                                        <label class="focus-label">İsim</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="Surname" required>
                                        <label class="focus-label">Soyisim</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="UserName" required>
                                        <label class="focus-label">Kullanıcı Adı</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="email" class="form-control floating" asp-for="Mail" required>
                                        <label class="focus-label">E-Posta </label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="password" class="form-control floating" asp-for="Password" required>
                                        <label class="focus-label">Şifre</label>
                                    </div>
                                    <div class="form-group form-focus mb-0">
                                        <input type="password" class="form-control floating" asp-for="ConfirmPassword" required>
                                        <label class="focus-label">Şifre Tekrar</label>
                                    </div>
                                    <div class="dont-have">
                                        <label class="custom_check">
                                            <input type="checkbox" name="rem_password">
                                            <span class="checkmark"></span> Kofejob Kullanıcı Sözleşmesini, <a href="privacy-policy.html">Gizlilik Politikasını</a> ve <a href="privacy-policy.html">Çerez Politikasını</a>.
                                        </label>
                                    </div>
                                    <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">KAYIT OL!</button>

                                    <div class="row">
                                        <div class="col-6 text-start">
                                            <a class="forgot-link" href="forgot-password.html">Parolanızı mı unuttunuz?</a>
                                        </div>
                                        <div class="col-6 text-end dont-have">Kofejob'da varım. <a href="login.html">Tıklayın!</a></div>
                                    </div>
                                </form>
                            </div>
                            <div role="tabpanel" id="company" class="tab-pane fade">
                                <form method="post">
                                    <input type="hidden" asp-for="IsCompany" value="true" />
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="Name" required>
                                        <label class="focus-label">İsim</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="Surname" required>
                                        <label class="focus-label">Soyisim</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="text" class="form-control floating" asp-for="UserName" required>
                                        <label class="focus-label">Şirket Adı</label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="email" class="form-control floating" asp-for="Mail" required>
                                        <label class="focus-label">E-Posta </label>
                                    </div>
                                    <div class="form-group form-focus">
                                        <input type="password" class="form-control floating" asp-for="Password" required>
                                        <label class="focus-label">Şifre</label>
                                    </div>
                                    <div class="form-group form-focus mb-0">
                                        <input type="password" class="form-control floating" asp-for="ConfirmPassword" required>
                                        <label class="focus-label">Şifre Tekrar</label>
                                    </div>
                                    <div class="dont-have">
                                        <label class="custom_check">
                                            <input type="checkbox" name="rem_password">
                                            <span class="checkmark"></span> Kofejob Kullanıcı Sözleşmesini, <a href="privacy-policy.html">Gizlilik Politikasını</a> ve <a href="privacy-policy.html">Çerez Politikasını</a>.
                                        </label>
                                    </div>
                                    <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">KAYIT OL!</button>

                                    <div class="row">
                                        <div class="col-6 text-start">
                                            <a class="forgot-link" href="forgot-password.html">Parolanızı mı unuttunuz?</a>
                                        </div>
                                        <div class="col-6 text-end dont-have">Kofejob'da varım. <a href="login.html">Tıklayın!</a></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Register Tab Content -->
        </div>
    </div>
</div>
