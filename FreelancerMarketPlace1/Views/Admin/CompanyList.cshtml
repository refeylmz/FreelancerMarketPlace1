@model CompanyListViewModel
@{
    ViewData["Title"] = "CompanyList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="subscribe-employe">
            <ul>
                <li class ="active"><a href="/Admin/CompanyList">Şirketler </a></li>
                <li ><a href="/Admin/FreelancerList">Freelancerlar</a></li>
            </ul>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Şirket Adı</th>
                                <th>Yetkili Adı</th>
                                <th>Tecrübe</th>
                                <th>Şehir</th>
                                <th>Açıklama</th>
                                
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Companies)
                            {
                                <tr class="align-center">
                                    <td>@item.CompanyID</td>
                                    @if (item.CompanyImage == null)
                                    {
                                        <td><img src="/template-html/assets/img/user/avatar-1.jpg" style="width:40px; height:40px; border-radius:50%; " /> <a href="/Company/CompanyDetail/@item.CompanyID">@item.CompanyName</a></td>
                                    }
                                    else
                                    {
                                        <td><img src="/userimages/@item.CompanyImage" style="width:40px; height:40px; border-radius:50%; " />  <a href="/Company/CompanyDetail/@item.CompanyID">@item.CompanyName</a></td>

                                    }
                                    <td>@item.NameSurname</td>
                                    <td>@item.ExperienceDuration</td>
                                    <td>@item.City</td>
                                    <td>@item.Description</td>
                                    
                                    <td><a href="/Admin/DeleteCompany/@item.CompanyID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


