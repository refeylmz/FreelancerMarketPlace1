@model List<HomeDevelopedProject>

@{
    ViewData["Title"] = "HomeFeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="align-center">
                                    <td><p class="text-primary">@item.Title</p></td>
                                    <td>@item.Description</td>

                                    <td>
                                        <a href="/Admin/UpdateHomeFeature/@item.HomeDevelopedProjectID" class="btn btn-success"><i class="fa fa-wrench"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>